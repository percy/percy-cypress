  "devDependencies": {
    "@oclif/tslint": "^3.1.0",
    "cypress": "^3.1.3",
    "http-server": "^0.11.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@percy/agent": "^0.1.2"
