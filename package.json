{
  "name": "@percy/cypress",
  "version": "1.0.5",
  "description": "Cypress client library for visual regression testing with Percy (https://percy.io).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "pretest": "npm run build",
    "test": "percy exec -- node run-tests.js",
    "test:debug": "LOG_LEVEL=debug npm run test",
    "clean": "rm -rf dist/",
    "build": "npm run clean && tsc",
    "prepublish": "npm run build",
    "lint": "tslint -p . -t stylish --fix",
    "cypress:open": "cypress open"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/percy/percy-cypress.git"
  },
  "keywords": [
    "cypress"
  ],
  "engines": {
    "node": ">=8.0.0"
  },
  "author": "Perceptual Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/percy/percy-cypress/issues"
  },
  "homepage": "https://github.com/percy/percy-cypress#readme",
  "devDependencies": {
    "@oclif/tslint": "^3.1.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "cypress": "^3.1.3",
    "http-server": "^0.11.1",
    "semantic-release": "^15.13.3",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3"
  },
  "dependencies": {
    "@percy/agent": "^0.2.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
